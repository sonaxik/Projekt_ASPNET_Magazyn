@model IEnumerable<Asortyment>

@{
    ViewData["Title"] = "Lista Asortymentu";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Nazwa</th>
                <th>Marka</th>
                <th>Cena</th>
                <th>Opis</th>
                <th>Ilość</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1; 
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@item.Name</td>
                    <td>@item.Brand</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a>
                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-action="Create" class="btn btn-success">Dodaj nowy produkt</a>
    </div>
</div>